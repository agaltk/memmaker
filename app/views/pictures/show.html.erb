<div class="row">
  <div class="col-lg-2">
  </div>
  <div class="col-lg-6">
    <div class="well">
      <fieldset>
        <blockquote>
          <legend><%= @picture.title %></legend>
          <p><b>Dodano: </b><%= @picture.added %></p>
        </blockquote>

        <%= image_tag(@picture.image.thumb)%>
        <br />
        <br />
        <div class="form-group">
          <div class="col-lg-12 col-lg-offset-2">
            <div class="btn-group">
            <%= link_to 'Wstecz',
              pictures_path, :class => 'btn btn-warning'  %>
            <%= link_to 'Edytuj',
              edit_picture_path(@picture), :class => 'btn btn-danger' %>
            <%= link_to 'Usun',
              picture_path(@picture),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Jestes pewien?')) },
              :class => 'btn btn-primary' %>
            </div>
          </div>
        </div>
      </fieldset>
    </div>
  </div>
</div>




