<%= simple_form_for @picture, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group col-lg-12">
  	<%= f.input :title,  :input_html => {:class =>"form-control"}, :label => 'Tytul'%>
  </div>
  <div class="form-group col-lg-12">
    <%= f.input :image,  :input_html => {:class =>"form-control"}, :label => 'Wybierz obrazek' %>
  </div>
  <div class="form-group col-lg-12">
    <%= f.input :private,  :input_html => {:class =>"form-control",'rows' => 5, 'cols' => 10},:as => :hidden %>
  </div>
  <div class="form-group">
    <div class="col-lg-12 col-lg-offset-2">
      <%= f.button :submit,'Zapisz', :class => 'btn btn-primary' %>
      <%= link_to 'Anuluj',
                pictures_path, :class => 'btn btn-info' %>
    </div>
  </div>
<% end %>
