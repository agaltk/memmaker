<div class="row">
  <div class="col-lg-2">
  </div>
  <div class="col-lg-6">
  	<div class="well">
      <%= simple_form_for :newmem, :url => '/pictures/'+@picture.id.to_s+'/newmem', :html => { :class => 'form-horizontal' } do |f| %>
        <fieldset>
          <%= image_tag(@picture.image.thumb)%>

          <legend>Utworz mem</legend>
          <div class="form-group col-lg-12">
         	<%= f.input :text,:input_html => {:class =>"form-control"},:label => 'Tekst' %>
          </div>
          <div class="form-group">
            <div class="col-lg-12 col-lg-offset-2">
              <%= f.button :submit,'Zapisz mem', :class => 'btn btn-primary' %>
            </div>
          </div>
        </fieldset>
      <% end %>
    </div>
  </div>
</div>
