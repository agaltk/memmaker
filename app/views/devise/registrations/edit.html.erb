<div class="row">
  <div class="col-lg-2">
  </div>
  <div class="col-lg-6">
    <div class="well">
      <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => "bs-example form-horizontal" }) do |f| %>
      <fieldset>
        <legend>Edytuj moje dane</legend>
        <%= f.error_notification %>
        <div class="form-group col-lg-12">
          <%= f.input :email, :required => true, :autofocus => true, :input_html => {:class =>"form-control"} %>
        </div>
        <div class="form-group col-lg-12">
          <%= f.input :password,:label => 'Nowe haslo', :autocomplete => "off", :hint => "pozostaw pole puste jesli nie chcesz zmieniac hasla", :required => false, :input_html => {:class =>"form-control"} %>
        </div>
        <div class="form-group col-lg-12">
          <%= f.input :password_confirmation,:label => 'Powtorz nowe haslo', :required => false, :input_html => {:class =>"form-control"} %>
        </div>
        <div class="form-group col-lg-12">
          <%= f.input :current_password,:label => 'Aktualne haslo', :hint => "aktualne haslo jest potrzebne aby potwierdzic zmiany", :required => true, :input_html => {:class =>"form-control"} %>
        </div>
        <div class="form-group">
          <div class="col-lg-12 col-lg-offset-2">
            <%= f.button :submit, "Aktualizuj", :class => "btn btn-primary"%>
          </div>
        </div>
      <% end %>

      </fieldset>     
    </div>
  </div>
</div>                 






