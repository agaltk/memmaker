<div class="row">
  <div class="col-lg-2">
  </div>
  <div class="col-lg-6">
    <div class="well">
      <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "bs-example form-horizontal"}) do |f| %>
        <fieldset>
          <legend>Zarejestruj sie</legend>
            <%= f.error_notification %>

            <div class="form-group col-lg-12">
              <%= f.input :email, :required => false, :autofocus => true,  :input_html => {:class =>"form-control"} %>
            </div>

            <div class="form-group col-lg-12">
              <%= f.input :password,:label => 'Haslo', :required => false, :input_html => {:class =>"form-control"} %>
            </div>

            <div class="form-group col-lg-12">
              <%= f.input :password_confirmation,:label => 'Powtorz haslo', :required => false, :input_html => {:class =>"form-control"} %>
            </div>

            <div class="form-group">
              <div class="col-lg-12 col-lg-offset-2">
                <%= f.button :submit, "Zarejestruj sie", :class => "btn btn-primary"%>
              </div>
            </div>
        </fieldset>
      <% end %>
    </div>
  </div>
</div>                 





